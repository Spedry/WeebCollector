<HBox fx:id="animeEntry" alignment="CENTER_RIGHT" fillHeight="false" focusTraversable="true" maxHeight="30.0" maxWidth="1.7976931348623157E308" minHeight="30.0" minWidth="-Infinity" prefHeight="30.0" stylesheets="@../css/anime-entry.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1">
