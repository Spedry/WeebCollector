         <graphic>
            <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/minus.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button alignment="CENTER" maxHeight="30.0" maxWidth="30.0" minHeight="30.0" minWidth="30.0" mnemonicParsing="false" onAction="#onActionEditEntry" prefHeight="30.0" prefWidth="30.0">
         <graphic>
            <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/gear.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
